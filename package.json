{
  "name": "tweet-chat",
  "productName": "Tweet Chat",
  "author": "Paolo Anzani",
  "description": "AI powered chat with your own favorites Twitter accounts.",
  "private": true,
  "version": "2.0.0-alpha",
  "type": "module",
  "main": "dist-electron/src/electron/main.js",
  "scripts": {
    "format": "prettier --write .",
    "dev": "npm-run-all --parallel dev:electron dev:vite",
    "dev:vite": "vite",
    "dev:electron": "npm run transpile:electron; cross-env NODE_ENV=development electron . --no-sandbox",
    "build": "npm run transpile:electron && vue-tsc -b && vite build",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "build:mac": "npm run build && electron-builder --mac --arm64",
    "build:linux": "npm run build && electron-builder --linux --x64",
    "build:windows": "npm run build && electron-builder --windows --x64",
    "build:all:arm64": "npm run build && electron-builder --mac --linux --windows --arm64",
    "build:all:x64": "npm run build && electron-builder --mac --linux --windows --x64",
    "clean": "npx rimraf dist-electron && npx rimraf dist"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.20",
    "@primeuix/themes": "^1.0.3",
    "@tailwindcss/vite": "^4.1.4",
    "agent-twitter-client": "^0.0.17",
    "ai": "^4.3.10",
    "chalk": "^5.4.1",
    "date-fns": "^4.1.0",
    "dateformat": "^5.0.3",
    "electron-store": "^10.0.1",
    "motion-v": "^1.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.3",
    "tailwindcss": "^4.1.4",
    "tailwindcss-primeui": "^0.6.1",
    "uuid": "^11.1.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/date-fns": "^2.5.3",
    "@types/dateformat": "^5.0.3",
    "@types/electron-store": "^1.3.1",
    "@types/keytar": "^4.4.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vue-tsc": "^2.2.8"
  },
  "bundledDependencies": [
    "@ai-sdk/openai",
    "@primeuix/themes",
    "@tailwindcss/vite",
    "agent-twitter-client",
    "ai",
    "chalk",
    "date-fns",
    "dateformat",
    "electron-store",
    "motion-v",
    "primeicons",
    "primevue",
    "tailwindcss",
    "tailwindcss-primeui",
    "uuid",
    "vue"
  ],
  "build": {
    "appId": "com.paoloanzn.tweet-chat",
    "files": [
      "dist-electron",
      "dist"
    ],
    "icon": "./icons/desktop-icon.png",
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Productivity"
    },
    "win": {
      "target": ["portable"]
    }
  }
}
